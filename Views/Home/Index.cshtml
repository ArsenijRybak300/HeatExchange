@model List<HeatExchangeCalculator.Models.Calculation>
@{
    ViewData["Title"] = "Мои расчеты";
}

<h2>Мои расчеты</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <p class="mb-0">Нет сохраненных расчетов. Создайте первый расчет.</p>
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Название</th>
                    <th>Дата создания</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var calc in Model)
                {
                    <tr>
                        <td>@calc.Name</td>
                        <td>@calc.CreatedDate.ToString("dd.MM.yyyy HH:mm")</td>
                        <td>
                            <div class="btn-group">
                                <a asp-action="Results" asp-route-id="@calc.Id" class="btn btn-sm">Просмотреть</a>
                                <a asp-action="Create" asp-route-id="@calc.Id" class="btn btn-sm">Редактировать</a>
                                <a asp-action="Chart" asp-route-id="@calc.Id" target="_blank" class="btn btn-sm">График</a>
                                <form asp-action="Delete" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@calc.Id" />
                                    <button type="submit" class="btn btn-sm" 
                                            onclick="return confirm('Удалить расчет «@calc.Name»?')">Удалить</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<div class="navigation-buttons">
    <a asp-action="Create" class="btn">Создать новый расчет</a>
</div>