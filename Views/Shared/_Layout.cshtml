<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Калькулятор теплообмена</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #333;
        }
        
        .navbar {
            background-color: #ffffff;
            border-bottom: 1px solid #dee2e6;
            box-shadow: 0 2px 4px rgba(0,0,0,.05);
        }
        
        .navbar-brand {
            font-weight: 600;
            color: #212529 !important;
        }
        
        .nav-link {
            color: #495057 !important;
            font-weight: 500;
        }
        
        .nav-link:hover {
            color: #000 !important;
        }
        
        .container {
            max-width: 1200px;
            background: #fff;
            padding: 2rem;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0,0,0,.05);
            margin-top: 2rem;
            margin-bottom: 2rem;
        }
        
        h1, h2, h3, h4, h5, h6 {
            color: #212529;
            font-weight: 600;
            margin-bottom: 1.5rem;
        }
        
        .btn {
            border-radius: 4px;
            font-weight: 500;
            padding: 0.5rem 1.5rem;
            transition: all 0.2s;
            border: 1px solid #dee2e6;
        }
        
        .btn-primary, .btn-secondary, .btn-success, .btn-danger, .btn-warning, .btn-info {
            background-color: #f8f9fa;
            color: #212529;
            border-color: #ced4da;
        }
        
        .btn-primary:hover, .btn-secondary:hover, .btn-success:hover, .btn-danger:hover, .btn-warning:hover, .btn-info:hover {
            background-color: #e9ecef;
            color: #000;
            border-color: #adb5bd;
            transform: translateY(-1px);
        }
        
        .table {
            border: 1px solid #dee2e6;
        }
        
        .table thead th {
            background-color: #f8f9fa;
            border-bottom: 2px solid #dee2e6;
            color: #495057;
            font-weight: 600;
        }
        
        .table tbody tr:hover {
            background-color: #f8f9fa;
        }
        
        .form-control, .form-select {
            border: 1px solid #ced4da;
            border-radius: 4px;
            padding: 0.5rem 0.75rem;
        }
        
        .form-control:focus, .form-select:focus {
            border-color: #adb5bd;
            box-shadow: 0 0 0 0.2rem rgba(108, 117, 125, 0.15);
        }
        
        .alert {
            border-radius: 4px;
            border: 1px solid #dee2e6;
        }
        
        .alert-success {
            background-color: #f0f9f0;
            color: #155724;
            border-color: #c3e6cb;
        }
        
        .card {
            border: 1px solid #dee2e6;
            border-radius: 6px;
            box-shadow: 0 1px 3px rgba(0,0,0,.05);
        }
        
        .card-header {
            background-color: #f8f9fa;
            border-bottom: 1px solid #dee2e6;
            font-weight: 600;
        }
        
        .chart-container {
            background: #fff;
            padding: 1.5rem;
            border-radius: 6px;
            border: 1px solid #dee2e6;
            margin: 2rem 0;
        }
        
        footer {
            color: #6c757d;
            font-size: 0.9rem;
            padding: 1.5rem 0;
            text-align: center;
            border-top: 1px solid #dee2e6;
            margin-top: 3rem;
        }
        
        .btn-group .btn {
            margin-right: 0.5rem;
            margin-bottom: 0.5rem;
        }
        
        .btn-group .btn:last-child {
            margin-right: 0;
        }
        
        .navigation-buttons {
            display: flex;
            gap: 1rem;
            margin-top: 2rem;
            padding-top: 1.5rem;
            border-top: 1px solid #dee2e6;
        }
        
        .input-group-text {
            background-color: #f8f9fa;
            border: 1px solid #ced4da;
            color: #495057;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-thermometer-half me-2" viewBox="0 0 16 16">
                    <path d="M9.5 12.5a1.5 1.5 0 1 1-2-1.415V6.5a.5.5 0 0 1 1 0v4.585a1.5 1.5 0 0 1 1 1.415"/>
                    <path d="M5.5 2.5a2.5 2.5 0 0 1 5 0v7.55a3.5 3.5 0 1 1-5 0zM8 1a1.5 1.5 0 0 0-1.5 1.5v7.987l-.167.15a2.5 2.5 0 1 0 3.333 0l-.166-.15V2.5A1.5 1.5 0 0 0 8 1"/>
                </svg>
                Калькулятор теплообмена
            </a>
            <div class="navbar-nav">
                <a class="nav-link" asp-controller="Home" asp-action="Index">Главная</a>
                <a class="nav-link" asp-controller="Home" asp-action="Create">Новый расчет</a>
            </div>
        </div>
    </nav>

    <main role="main" class="pb-3">
        <div class="container">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            
            @RenderBody()
        </div>
    </main>

    <footer class="footer">
        <div class="container">
            <span>© @DateTime.Now.Year - Калькулятор противоточного теплообмена</span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>